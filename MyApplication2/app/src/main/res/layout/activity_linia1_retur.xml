<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainContent">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/triaj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:background="@drawable/button_backround"
                android:text="Triaj" />

            <Button
                android:id="@+id/rat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_backround"
                android:text="RAT Brasov" />

            <Button
                android:id="@+id/aut3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_backround"
                android:text="Autogara 3" />

            <Button
                android:id="@+id/vlahuta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_backround"
                android:text="Vlahuta" />

            <Button
                android:id="@+id/ius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_backround"
                android:text="IUS" />

            <Button
                android:id="@+id/cec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_backround"
                android:text="CEC" />

            <Button
                android:id="@+id/mesota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_backround"
                android:text="Liceul Mesota" />

            <Button
                android:id="@+id/comert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_backround"
                android:text="Camera de Comert" />

            <Button
                android:id="@+id/sanitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_backround"
                android:text="Sanitas " />

            <Button
                android:id="@+id/primarie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_backround"
                android:text="Primarie" />

            <Button
                android:id="@+id/livadaPostei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:background="@drawable/button_backround"
                android:text="Livada Postei" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>